@implements IDisposable

@code {

	[CascadingParameter]
	public Grid Parent
	{
		get;
		set;
	} = default!;

	[Parameter]
	public string Width
	{
		get;
		set;
	} = "*";

	[Parameter]
	public int? SortOrder
	{
		get;
		set;
	} = default;

	protected override void OnParametersSet()
	{
		Parent.AddColumn(this);
		base.OnParametersSet();
	}

	public void Dispose()
	{
		Parent?.RemoveColumn(this);
	}
}

