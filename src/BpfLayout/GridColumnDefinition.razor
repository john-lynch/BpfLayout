@implements IDisposable

@code {

	[CascadingParameter]
	public Grid Parent
	{
		get;
		set;
	} = default!;

	[Parameter]
	public string Width
	{
		get;
		set;
	} = "*";

	[Parameter]
	public int? SortOrder
	{
		get;
		set;
	} = default;

	[Parameter]
	public double? MinWidth
	{
		get;
		set;
	} = default;

	[Parameter]
	public double? MaxWidth
	{
		get;
		set;
	} = default;

	protected override void OnInitialized()
	{
		Parent.AddColumn(this);
		base.OnInitialized();
	}

	public void Dispose()
	{
		Parent?.RemoveColumn(this);
	}
}

