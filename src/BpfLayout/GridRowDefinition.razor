@implements IDisposable

@code {

	[CascadingParameter]
	public Grid Parent
	{
		get;
		set;
	} = default!;

	[Parameter]
	public string Height
	{
		get;
		set;
	} = "*";

	[Parameter]
	public int? SortOrder
	{
		get;
		set;
	} = default;

	[Parameter]
	public double? MinHeight
	{
		get;
		set;
	} = default;

	[Parameter]
	public double? MaxHeight
	{
		get;
		set;
	} = default;

	protected override void OnInitialized()
	{
		Parent.AddRow(this);
		base.OnInitialized();
	}

	public void Dispose()
	{
		Parent?.RemoveRow(this);
	}
}

