@inherits GridTrackDefinitionBase
@implements IDisposable

@code {

	[Parameter]
	public string Height
	{
		get;
		set;
	} = "*";

	[Parameter]
	public double? MinHeight
	{
		get;
		set;
	} = default;

	[Parameter]
	public double? MaxHeight
	{
		get;
		set;
	} = default;

	internal override string Size => Height;

	internal override double? MinSize => MinHeight;

	internal override double? MaxSize => MaxHeight;

	internal override int GetSplitterIndex(GridSplitter splitter) => splitter.Row;

	protected override void OnInitialized()
	{
		Parent.AddRow(this);
		base.OnInitialized();
	}

	public void Dispose()
	{
		Parent?.RemoveRow(this);
	}
}

