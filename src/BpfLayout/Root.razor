<style>
	.bpf-layout-root {
		width: @WidthCss;
		height: @HeightCss;
	}

	.bpf-layout-root > * {
		width: 100%;
		height: 100%;
	}
</style>
<div class="bpf-layout-root">
	@ChildContent
</div>

@code {
	[Parameter]
	public RenderFragment? ChildContent
	{
		get;
		set;
	}

	[Parameter]
	public string WidthCss
	{
		get;
		set;
	} = "100%";

	[Parameter]
	public string HeightCss
	{
		get;
		set;
	} = "100%";
}
