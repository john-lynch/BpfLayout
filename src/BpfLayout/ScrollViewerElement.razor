@inherits ElementBase<ScrollViewer>

<style>
    .@UniqueClassCssForMarginContainer {
        grid-row: 1;
        grid-column: 1;
        overflow: clip;
        box-sizing: border-box;
        padding: @MarginCss;
        width: @ContainerWidthCss;
        height: @ContainerHeightCss;
        min-width: @MinWidthCss;
        min-height: @MinHeightCss;
        justify-self: @HorizontalAlignmentCss;
        align-self: @VerticalAlignmentCss;
        display: grid;
        grid-template-rows: 100%;
        grid-template-columns: 100%;
    }

    .@UniqueClassCssForMarginContainer > * {
        grid-row: 1;
        grid-column: 1;
        width: @ElementWidthCss;
        height: @ElementHeightCss;
        min-width: @MinWidthCss !important;
        min-height: @MinHeightCss !important;
    }
</style>
<div class="@UniqueClassCssForMarginContainer">
    @ChildContent
</div>
