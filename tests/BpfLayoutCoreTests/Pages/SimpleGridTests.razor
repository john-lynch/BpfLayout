@page "/simplegrid"

@using MudBlazor

<PageTitle>BpfLayout Core Tests - Simple Grid</PageTitle>
<MudCheckBox @bind-Checked="@ShowBonusRow" Label="Show Bonus Row"/>
<Grid>
	<GridRowDefinitions>
		@if (ShowBonusRow)
		{
			<GridRowDefinition Height="100" SortOrder="2"/>
		}
		<GridRowDefinition Height="Auto" />
		<GridRowDefinition />
	</GridRowDefinitions>
	<ChildContent>
		<GridElement Row="2">
			HELLO WORLD
		</GridElement>
		<GridElement Row="0" Column="0" Width="400">
			<Grid>
				<GridColumnDefinitions>
					<GridColumnDefinition/>
					<GridColumnDefinition Width="Auto"/>
				</GridColumnDefinitions>
				<ChildContent>
					<GridElement Row="0" Column="0">
						<Box FillColor="#0000FF" BorderColor="#FF0000" BorderThickness="3" />
					</GridElement>
					<GridElement Row="0" Column="1" Width="50" Height="10" Margin="new Thickness(25, 10, 25, 40)">
						<Box FillColor="#0000FF" BorderColor="#FF0000" BorderThickness="3" />
					</GridElement>
				</ChildContent>
			</Grid>
		</GridElement>
		<GridElement Row="1" Column="0" Height="400">
			<Box FillColor="#0000FF" BorderColor="#FF0000" BorderThickness="3" />
		</GridElement>
	</ChildContent>
</Grid>

@code {
	bool ShowBonusRow = true;
}
