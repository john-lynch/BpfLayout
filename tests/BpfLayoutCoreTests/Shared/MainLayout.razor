@using MudBlazor

@inherits LayoutComponentBase

<PageTitle>BpfLayoutCoreTests</PageTitle>

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout Style="width: 100%; height: 100vh; display: flex">
	<MudAppBar>
		<MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
		My Application
	</MudAppBar>
	<MudDrawer @bind-Open="@_drawerOpen">
		<NavMenu />
	</MudDrawer>
	<MudMainContent Style="width: 100%; height: 100%; flex: auto">
		<MudContainer Style="width: 100%; height: 100%">
			@Body
		</MudContainer>
	</MudMainContent>
</MudLayout>
@code {
	bool _drawerOpen = true;

	void DrawerToggle()
	{
		_drawerOpen = !_drawerOpen;
	}
}

